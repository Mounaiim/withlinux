<div class="container">
  <h4 class="text-center">Contact us</h4>
  
  <%= form_for "/contacts" do |f| %>
    <%= f.label :name %> 
    <%= f.text_field :name %>
    
    <%= f.label :email %>
    <%= f.text_field :email %>
    
    <%= f.label :comments %>
    <%= f.text_area :comments %>
    
    <%= f.submit   'Submit' %>
  <%end%>    
</div>